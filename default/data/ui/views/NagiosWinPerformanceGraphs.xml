              <param name="search">search plugin="NT-DriveC" | timechart span=5m avg(drive_used) as "Drive Used", avg(drive_total) as "Drive Total"</param>
              <param name="groupLabel">C Drive Usage</param>
              <module name="ViewstateAdapter">
                <module name="HiddenFieldPicker">
